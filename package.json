{
  "name": "stock-analyzer-fullstack",
  "version": "1.0.0",
  "description": "Full-stack Stock Analyzer application for Render deployment",
  "scripts": {
    "build": "cd frontend && npm install && npm run build",
    "start": "cd backend && python app.py",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python app.py",
    "install-frontend": "cd frontend && npm install",
    "install-backend": "cd backend && pip install -r requirements.txt",
    "postbuild": "echo 'Build completed successfully'",
    "heroku-postbuild": "npm run build",
    "test": "echo 'No tests specified'",
    "clean": "rm -rf frontend/dist && rm -rf backend/__pycache__"
  },
  "devDependencies": {
    "terser": "^5.43.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "python": ">=3.9.0"
  },
  "keywords": [
    "stock-analyzer",
    "react",
    "flask",
    "mongodb",
    "machine-learning",
    "financial-data"
  ],
  "author": "Your Name",
  "license": "MIT"
}
